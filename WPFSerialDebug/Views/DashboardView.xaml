<UserControl
    x:Class="WPFSerialDebug.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewModels="clr-namespace:WPFSerialDebug.ViewModels"
    Width="1100"
    d:DataContext="{d:DesignInstance Type=viewModels:DashboardViewModel,
                                     IsDesignTimeCreatable=True}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="1"
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="0,0,0,33">
            <ui:Card Margin="0,8,0,4">
                <StackPanel>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="{Binding SerialPortPortName}" />
                        <ComboBox
                            Grid.Column="1"
                            Margin="8,0,0,0"
                            ItemsSource="{Binding PortNames}"
                            SelectedItem="{Binding SerialPortPortName}" />
                    </Grid>
                    <Grid Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="波特率" />
                        <ComboBox
                            Grid.Column="1"
                            Margin="12,0,0,0"
                            ItemsSource="{Binding BaudRateList, Mode=OneWay}"
                            SelectedValue="{Binding SerialPortBaudRate}" />
                    </Grid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="校验位" />
                        <ComboBox
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            ItemsSource="{Binding SerialPortParity, Mode=OneWay}"
                            SelectedIndex="0" />
                        <TextBlock
                            Grid.Column="2"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Text="数据位" />
                        <ComboBox
                            Grid.Column="3"
                            Margin="4,0,0,0"
                            ItemsSource="{Binding DataBits, Mode=OneWay}"
                           
                            SelectedIndex="0" />
                    </Grid>
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="停止位" />
                        <ComboBox
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            ItemsSource="{Binding StopBitNames, Mode=OneWay}"
                            SelectedIndex="0"
                            SelectedValue="{Binding SerialPortStopBits}" />
                        <TextBlock
                            Grid.Column="2"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Text="流控制" />
                        <ComboBox
                            Grid.Column="3"
                            Margin="4,0,0,0"
                            ItemsSource="{Binding Handshakes, Mode=OneWay}"
                            SelectedIndex="0"
                            SelectedValue="{Binding SerialPortHandshake}" />
                    </Grid>

                    <StackPanel Orientation="Horizontal">
                        <CheckBox Content="RTS" IsChecked="{Binding SerialPortRtsEnable}" />
                        <CheckBox
                            Margin="4,0,0,0"
                            Content="DTR"
                            IsChecked="{Binding SerialPortDtrEnable}" />
                    </StackPanel>
                    <ui:Button
                        Width="300"
                        Margin="4,0,0,0"
                        Appearance="Primary"
                        Command="{Binding OpenPortCommand}"
                        Content="打开串口"
                        Icon="Comma24" />
                </StackPanel>
            </ui:Card>
            <ui:Card Margin="0,4,0,0">
                <ui:Card.ToolTip>
                    <TextBlock
                        FontSize="16"
                        FontWeight="Medium"
                        Text="接收显示" />
                </ui:Card.ToolTip>
                <WrapPanel>
                    <CheckBox
                        Width="120"
                        Margin="0,0,0,4"
                        Content="显示接收"
                        IsChecked="{Binding IsShowReceive}" />
                    <CheckBox
                        Width="120"
                        Margin="0,0,0,4"
                        Content="显示发送"
                        IsChecked="{Binding IsShowSend}" />
                    <CheckBox
                        Width="120"
                        Margin="0,0,0,4"
                        Content="自动换行"
                        IsChecked="{Binding IsAutoWrap}" />
                    <CheckBox
                        Width="120"
                        Margin="0,0,0,4"
                        Content="HEX显示"
                        IsChecked="{Binding IsShowHex}" />
                    <CheckBox
                        Width="120"
                        Margin="0,0,0,4"
                        Content="时间戳"
                        IsChecked="{Binding IsShowDateTime}" />
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Width="120" Text="接收超时(ms):" />
                        <ui:NumberBox
                            Width="120"
                            Margin="0,4,0,0"
                            Value="3" />
                    </StackPanel>
                </WrapPanel>
            </ui:Card>
            <ui:Card Margin="0,4,0,0">
                <ui:Card.ToolTip>
                    <TextBlock
                        FontSize="16"
                        FontWeight="Medium"
                        Text="发送设置" />
                </ui:Card.ToolTip>
                <StackPanel Orientation="Horizontal">
                    <StackPanel>
                        <RadioButton
                            Margin="0,0,0,4"
                            Content="普通发送模式"
                            IsChecked="True" />
                        <RadioButton Margin="0,0,0,4" Content="队列发送模式" />
                    </StackPanel>
                    <StackPanel>
                        <RadioButton Margin="0,0,0,4" Content="文件发送模式" />
                        <ui:Button
                            Margin="0,0,0,4"
                            Appearance="Primary"
                            Command="{Binding SendHexCommand}"
                            Content="开始发送"
                            Icon="{ui:SymbolIcon Send24}" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>
        </StackPanel>
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="8,0,8,4">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <ui:TextBlock VerticalAlignment="Center" FontWeight="Medium" />
                <ui:Button
                    Margin="16,0,0,0"
                    Appearance="Secondary"
                    Content="清空接收区" />
                <ui:Button
                    Margin="8,0,0,0"
                    Appearance="Secondary"
                    Content="保存数据" />
                <TextBlock
                    Margin="8,0,0,0"
                    VerticalAlignment="Center"
                    Text="字符编码:" />
                <ComboBox
                    Width="100"
                    Margin="8,0,0,0"
                    SelectedIndex="0">
                    <ComboBoxItem Content="UTF-8" />
                    <ComboBoxItem Content="GBK" />
                    <ComboBoxItem Content="ASCII" />
                </ComboBox>
            </StackPanel>
            <ui:TextBox
                Grid.Row="1"
                Margin="0,8,0,36"
                AcceptsReturn="True"
                FontFamily="Consolas, Cascadia Mono, monospace"
                PlaceholderText="接收的数据将显示在这里..."
                Text="{Binding Msg}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Auto" />
            <ui:TextBox
                Grid.Row="3"
                Grid.RowSpan="2"
                Height="120"
                Margin="0,8,0,0"
                AcceptsReturn="True"
                PlaceholderText="在此输入要发送的文本..."
                Text="{Binding Text}"
                VerticalScrollBarVisibility="Auto" />
        </Grid>
        <Grid
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Label Content="RX: 0" />
                <Label Margin="8,0,0,0" Content="TX: 0" />
            </StackPanel>
            <CheckBox
                Grid.Column="1"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                Content="发送后清除" />

            <StackPanel
                Grid.Column="2"
                Margin="8,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <ui:Button Appearance="Secondary" Content="计数清零" />
                <ui:Button
                    Margin="8,0,0,0"
                    Appearance="Secondary"
                    Content="帮助" />
                <ui:Button
                    Margin="8,0,0,0"
                    Appearance="Secondary"
                    Content="退出程序" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>